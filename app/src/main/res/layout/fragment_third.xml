<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="FragmentAdmin.ThirdFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="#CECECE"
        android:backgroundTint="#F2F2F2"
        android:gravity="center"
        android:text="Gestion des menus du jour"
        android:textColor="#0C0505"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">



        <Button
            android:id="@+id/button_date_picked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Choisir la date du menu"
            android:textColor="@color/purple_500"
            android:backgroundTint="@color/white"/>

        <TextView
            android:id="@+id/txt_view_date_picked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:drawableRight="@drawable/ic_calendar"
            android:drawablePadding="50dp"
            android:editable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint=" DD/MM/YYYY"
            android:inputType="text|number"
            android:paddingBottom="40dp"
            android:textSize="20dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:gravity="right"
        android:padding="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonValidermenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:gravity="center"
            android:background="@drawable/round_primary"
            android:text="Modifier"
            android:textStyle="bold" />
    </LinearLayout>

    //table layout

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liste du menu du jour"
            android:textSize="15sp"
            android:textColorHint="@color/purple_200"
            android:fontFamily="monospace"
            android:layout_margin="15dp"
            android:textColor="@color/black"></TextView>

        <LinearLayout
            android:id="@+id/layout_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

        <Button
            android:id="@+id/button_add"
            android:background="@drawable/round_primary"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Add"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/ic_add"
            ></Button>

        <Button
            android:id="@+id/button_submit_list"
            android:background="@drawable/round_primary"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Submit List"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            ></Button>

    </LinearLayout>
</LinearLayout>